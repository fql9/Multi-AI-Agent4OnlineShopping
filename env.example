#
# Minimal .env template (dev)
# Full docs: doc/18_deployment.md, doc/19_ops_runbook.md
#

APP_ENV=development

# LLM (required)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_PLANNER=gpt-4o
OPENAI_MODEL_VERIFIER=gpt-4o

# Budget (optional)
TOKEN_BUDGET_TOTAL=50000

# Postgres (docker-compose.full.yml uses these)
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_dev_password
POSTGRES_DB=agent_db

# XOOBAY (recommended in prod)
XOOBAY_ENABLED=false
XOOBAY_API_KEY=your_xoobay_api_key
XOOBAY_BASE_URL=https://www.xoobay.com
XOOBAY_LANG=en

# Dev: keep /health from being rate-limited
RATE_LIMIT_ENABLED=false

# Host ports
TOOL_GATEWAY_PORT=28000
AGENT_PORT=28003
WEB_APP_PORT=28004

LOG_LEVEL=debug
