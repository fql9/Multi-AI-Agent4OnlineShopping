#
# Minimal .env template (prod)
# Full docs: doc/18_deployment.md, doc/19_ops_runbook.md
#

APP_ENV=production

# Postgres / Redis (docker-compose.full.yml uses POSTGRES_*; prod compose uses DB_*)
POSTGRES_USER=agent
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=agent_db
POSTGRES_PORT=25432

DB_USER=agent
DB_PASSWORD=your_secure_password_here
DB_NAME=agent_db

REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=26379

# Host ports
TOOL_GATEWAY_PORT=28000
CORE_MCP_PORT=28001
CHECKOUT_MCP_PORT=28002
AGENT_PORT=28003
WEB_APP_PORT=28004

# LLM (required)
OPENAI_API_KEY=sk-your-production-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_PLANNER=gpt-4o
OPENAI_MODEL_VERIFIER=gpt-4o

# Budget (optional)
TOKEN_BUDGET_TOTAL=50000
TOKEN_BUDGET_PER_STEP=5000

# XOOBAY (strongly recommended in prod)
XOOBAY_ENABLED=true
XOOBAY_API_KEY=your_xoobay_api_key
XOOBAY_BASE_URL=https://www.xoobay.com
XOOBAY_LANG=en

# CORS (allow your frontend origins)
CORS_ORIGINS=https://yourdomain.com

# Rate limit (ensure /health isn't blocked)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

SESSION_TTL_HOURS=24

MOCK_TOOLS=false
ENABLE_RAG=true

LOG_LEVEL=info

# Frontend endpoints (public)
NEXT_PUBLIC_TOOL_GATEWAY_URL=https://api.yourdomain.com
NEXT_PUBLIC_AGENT_API_URL=https://agent.yourdomain.com
