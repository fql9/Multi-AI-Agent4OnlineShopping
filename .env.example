# ----------------------------------------
# üóÑÔ∏è PostgreSQL Database
# ----------------------------------------
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_dev_password
POSTGRES_DB=agent_db
# External port (host machine access)
POSTGRES_PORT=25432

# ----------------------------------------
# üî¥ Redis Cache
# ----------------------------------------
REDIS_PASSWORD=redis_dev_password
# External port (host machine access)
REDIS_PORT=26379

# ----------------------------------------
# üîß Service Ports (External / Host Machine)
# ----------------------------------------
# These are the ports exposed on your host machine
TOOL_GATEWAY_PORT=28000
CORE_MCP_PORT=28001
CHECKOUT_MCP_PORT=28002
AGENT_PORT=28003
WEB_APP_PORT=28004

# ----------------------------------------
# üîë OpenAI API Configuration (Required)
# ----------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model selection (Êé®Ëçê‰ΩøÁî® gpt-4oÔºåmini Ê®°ÂûãÂ§ÑÁêÜÂ§çÊùÇ Schema ÂÆπÊòìÂá∫Èîô)
OPENAI_MODEL_PLANNER=gpt-4o
OPENAI_MODEL_VERIFIER=gpt-4o

# ----------------------------------------
# üí∞ Token Budget
# ----------------------------------------
TOKEN_BUDGET_TOTAL=50000
TOKEN_BUDGET_PER_STEP=5000

# ----------------------------------------
# üì¶ XOOBAY API (Optional - Product Data Source)
# ----------------------------------------
# Enable XOOBAY product integration
XOOBAY_ENABLED=true
XOOBAY_API_KEY=xoobay_api_ai_geo
XOOBAY_BASE_URL=https://www.xoobay.com
XOOBAY_LANG=zh_cn

# ----------------------------------------
# üåê CORS Configuration
# ----------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:28004

# For production, use your actual domain:
# CORS_ORIGINS=https://yourdomain.com

# ----------------------------------------
# üö¶ Rate Limiting (Tool Gateway)
# ----------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ----------------------------------------
# üîÑ Session Configuration
# ----------------------------------------
SESSION_TTL_HOURS=24

# ----------------------------------------
# üéõÔ∏è Feature Flags
# ----------------------------------------
# Set to true to use mock tools instead of real API calls
MOCK_TOOLS=false

# Enable RAG (Retrieval-Augmented Generation)
ENABLE_RAG=true

# ----------------------------------------
# üìä Logging
# ----------------------------------------
# Options: debug, info, warn, error
LOG_LEVEL=info

# ----------------------------------------
# üîß Development Tools (Optional)
# ----------------------------------------
# Adminer (Database UI) - http://localhost:28080
ADMINER_PORT=28080

# Redis Commander - http://localhost:28081
REDIS_COMMANDER_PORT=28081

# ----------------------------------------
# üåê Frontend Configuration
# ----------------------------------------
# URL for the frontend to access backend services
# These should match the external ports above
NEXT_PUBLIC_TOOL_GATEWAY_URL=http://localhost:28000
NEXT_PUBLIC_AGENT_API_URL=http://localhost:28003
