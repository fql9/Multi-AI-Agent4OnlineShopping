# ----------------------------------------
# üóÑÔ∏è PostgreSQL Database
# ----------------------------------------
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_dev_password
POSTGRES_DB=agent_db
POSTGRES_PORT=5433

# ----------------------------------------
# üî¥ Redis Cache
# ----------------------------------------
REDIS_PASSWORD=redis_dev_password
REDIS_PORT=6379

# ----------------------------------------
# üîß Service Ports
# ----------------------------------------
TOOL_GATEWAY_PORT=3000
CORE_MCP_PORT=3010
CHECKOUT_MCP_PORT=3011
WEB_APP_PORT=3001
AGENT_PORT=8000

# ----------------------------------------
# üîë OpenAI API Configuration (Required)
# ----------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model selection
OPENAI_MODEL_PLANNER=gpt-4o-mini
OPENAI_MODEL_VERIFIER=gpt-4o

# ----------------------------------------
# üí∞ Token Budget
# ----------------------------------------
TOKEN_BUDGET_TOTAL=50000
TOKEN_BUDGET_PER_STEP=5000

# ----------------------------------------
# üì¶ XOOBAY API (Optional)
# ----------------------------------------
# Enable XOOBAY product integration
XOOBAY_ENABLED=false
XOOBAY_API_KEY=
XOOBAY_BASE_URL=https://www.xoobay.com
XOOBAY_LANG=en

# ----------------------------------------
# üåê CORS Configuration
# ----------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3001

# For production, use your actual domain:
# CORS_ORIGINS=https://yourdomain.com

# ----------------------------------------
# üîÑ Session Configuration
# ----------------------------------------
SESSION_TTL_HOURS=24

# ----------------------------------------
# üéõÔ∏è Feature Flags
# ----------------------------------------
# Set to true to use mock tools instead of real API calls
MOCK_TOOLS=false

# Enable RAG (Retrieval-Augmented Generation)
ENABLE_RAG=true

# ----------------------------------------
# üìä Logging
# ----------------------------------------
# Options: debug, info, warn, error
LOG_LEVEL=info

# ----------------------------------------
# üîß Development Tools (Optional)
# ----------------------------------------
# Adminer (Database UI)
ADMINER_PORT=8080

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ----------------------------------------
# üåê Frontend Configuration
# ----------------------------------------
# URL for the frontend to access Tool Gateway
# In Docker: uses internal network
# For browser: uses localhost
NEXT_PUBLIC_TOOL_GATEWAY_URL=http://localhost:3000
